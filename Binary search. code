#include<stdio.h>

int main()
{
    int a[10],i,j,key,mid,flag,pos,comparison;
    for(i=0;i<10;i++)
    {
        printf("Enter the number:");
        scanf("%d",&a[i]);
    }
    printf("Enter number to search:");
    scanf("%d",&key);
    i=0;
    j=9;
    flag=0;
    while(i<=j){
        	comparison++;
        mid=(i+j)/2;
        if(a[mid]==key)
        {
            flag=1;
            pos=mid+1;
            break;
        }
        if(a[mid]>key)
        j=mid-1;
        if(a[mid]<key)
        i=mid+1;
    }
    if(flag==1)
    printf("Element found at %d position",pos);
    else
    printf("Element not found");
    printf("Total comparisons made: %d\n", comparison);

         
            return 0;
        }


